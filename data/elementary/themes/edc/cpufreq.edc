      part { name: "meter"; mouse_events: 0;
         clip_to: "clip2";
         description { state: "default" 0.0000;
            color: 255 153 51 255;
            image.normal: "marker";
            rel1.to: "base";
            rel2.to: "base";
            map {
               on: 1;
               rotation.center: "base";
            }
